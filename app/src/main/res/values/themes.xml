<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BTSReader" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:background">@color/black</item>
        <item name="colorPrimary">@color/cardview_dark_background</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/dark_grey</item>
        <item name="android:itemBackground">@android:color/transparent</item>
        <item name="android:itemTextAppearance">@color/purple_700</item>
        <item name="colorOnBackground">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="actionMenuTextColor">@color/teal_200</item>
        <item name="actionMenuTextAppearance">@color/white</item>
        <item name="android:textAppearanceListItem">@color/teal_200</item>
        <item name="android:listViewStyle">@style/listView</item>

    </style>

<!--    The following are attempts to get changes to the context menu. Not currently used-->
    <style name="listView" parent="@android:style/Widget.ListView.White">
        <item name="android:background">@color/purple_700</item>
        <item name="android:itemTextAppearance">@color/purple_700</item>
    </style>

    <style name="BasePopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/purple_700</item>
    </style>

    <style name="SettingsTheme.NoActionBar" parent="Theme.AppCompat">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:background">#000000</item>
    </style>


</resources>