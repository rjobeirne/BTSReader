<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text=" Bedtime Story Reader "
        android:textSize="32sp"
        android:textColor="@color/white"
        android:background="@color/opaque_teal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <Button
        android:id="@+id/list_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library"
        android:background="@color/opaque_teal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/book_list"
        app:layout_constraintTop_toTopOf="@id/book_list" />

    <Button
        android:id="@+id/continue_listen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue Listening"
        android:background="@color/opaque_teal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/current_cover"
        app:layout_constraintTop_toTopOf="@id/current_cover" />

    <ImageView
        android:id="@+id/current_cover"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_marginTop="24dp"
        android:alpha="0.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

<ImageView
        android:id="@+id/book_list"
        android:layout_width="280dp"
        android:layout_height="208dp"
        android:src="@drawable/library"
        android:alpha="0.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>